<div id="pager" class="container mt-2">
  <div>
      <% if pagy.prev %>
        <%= link_to "< Previous page",
                    posts_path(page: pagy.prev),
                    class: "btn btn-sm btn-primary",
                    data: {
                      turbo_stream: true
                    } %>
      <% end %>
    </div>
    <div class="text-right">
      <% if pagy.next %>
        <%= link_to "Next page >",
                    posts_path(page: pagy.next),
                    class: "btn btn-sm btn-primary",
                    data: {
                      turbo_stream: true
                    } %>
      <% end %>
    </div>
</div>
