<% if @post.errors.any? %>
  <%= turbo_stream.update :modal do %>
    <%= render_modal partial: 'posts/form', locals: { post: @post } , title: 'Editar Post' %>
  <% end %>
<% else %>
  <%= turbo_stream.update :modal, html: '' %>
  <%= turbo_stream.replace @post, partial: 'posts/post', locals: { post: @post } %>

  <%= turbo_stream.append :toasts do %>
    <%= render_toast type: 'bg-warning', title: 'Blog - Post', message: 'Updated with success!' %>
  <% end %>
<% end %>
