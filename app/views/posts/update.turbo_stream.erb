<% if @post.errors.any? %>
  <%= turbo_stream.update :modal do %>
    <%= render_modal(partial: 'posts/form', locals: { post: @post } , title: 'Editar Post') %>
  <% end %>
<% else %>
  <%= turbo_stream.update :modal, html: '' %>
  <%= turbo_stream.update @post, partial: 'posts/post', locals: { post: @post } %>
<% end %>
